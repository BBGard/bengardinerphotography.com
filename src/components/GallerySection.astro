---
import LightBoxImage from "./LightBoxImage.astro";
interface Props {
  images: any;
}

const { images } = Astro.props;
---

<section class="gallery">
  <div class="gallery-container">
    {
      images.map((image) => (
        <LightBoxImage
          src={image.default.src}
          width={image.default.width}
          height={image.default.height}
          alt=""
          customClass="gallery-item"
        />
      ))
    }
  </div>
  <div class="lightbox"><img class="fullscreen-image" src="" alt="" /></div>

  <script>
    import "../scripts/lightboxImage.js";
  </script>

  <style>
    .gallery {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 2rem 0;
    }

    .gallery-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      grid-gap: 1rem;
      width: 100%;
      max-width: 1200px;
      padding: 0 1rem;
    }

    .lightbox {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100svh;
      /* background-color: var(--secondary); */
      background-color: var(--background-dark);
      z-index: -3;
      opacity: 0;
    }

    .lightbox.active {
      display: flex;
      z-index: 3;
      align-items: center;
      justify-content: center;
      padding: 1rem;
      opacity: 1;
      transition: opacity 1s ease-in-out;
      cursor: zoom-out;
    }

    .lightbox .fullscreen-image {
      max-width: 100%;
      max-height: 100%;
      border-radius: 4px;
      border: 16px solid var(--secondary);
    }


    @media (min-width: 768px) {
      .gallery-container {
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      }
    }
  </style>
</section>
