---
import LightBoxImage from "./LightBoxImage.astro";
interface Props {
  images: any;
}

const { images } = Astro.props;
---

<section class="gallery">
  <div class="gallery-container">
    {
      images.map((image) => (
        <LightBoxImage
          src={image.default.src}
          width={image.default.width}
          height={image.default.height}
          alt=""
          customClass="gallery-item"
        />
      ))
    }
  </div>
  <div class="lightbox">
    <img class="fullscreen-image" src="" alt="" />
    <div class="close-modal" hidden>
      <button class="close-modal-button">x</button>
    </div>
  </div>

  <script>
    import "../scripts/lightboxImage.js";
  </script>

  <style>
    .gallery {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 2rem 0;
    }

    .gallery-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      grid-gap: 1rem;
      width: 100%;
      max-width: 1200px;
      padding: 0 1rem;
    }

    .lightbox {
      position: fixed;
      top: 0;
      left: 0;
      width: 100dvw;
      height: 100dvh;
      background-color: var(--background-dark);
      z-index: -3;
      opacity: 0;
    }

    .lightbox.active {
      display: flex;
      z-index: 3;
      align-items: center;
      justify-content: center;
      padding: 1rem;
      opacity: 1;
      transition: opacity 1s ease-in-out;
      cursor: zoom-out;
    }

    .lightbox .fullscreen-image {
      max-width: 100%;
      max-height: 100%;
      border-radius: 4px;
      border: 16px solid var(--secondary);
    }

    .close-modal {
      position: fixed;
      top: 50px;
      right: 50px;
      z-index: 100;
      background-color: rgba(0, 0, 0, 0.8);
    }

    .close-modal-button {
      background-color: transparent;
      border: none;
      color: var(--secondary);
      cursor: pointer;
      font-family;: var(--font-primary);
      font-size: var(--font-size-5);
      text-transform: uppercase;
      padding: 0.25rem 1rem;
      border-radius: 1rem;
      background-color: var(--color-gold);
      transition: all 0.3s ease-in-out;
    }

    .close-modal-button:hover {
      color: var(--color-gold);
      background-color: var(--color-green);
      transform: scale(1.1);
    }

    @media (min-width: 768px) {
      .gallery-container {
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      }
    }
  </style>
</section>
