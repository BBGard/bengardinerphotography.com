---
import arrow from "../assets/double-arrow-up.svg";
---

<div class="return-to-top shakeable" >
  <a href="#top">
    <img src={ arrow.src } alt="Return to top of page" />
  </a>
</div>

<style>
.return-to-top {
  display:none;
  position: fixed;
  bottom: 50px;
  right: 50px;
  z-index: 100;
}

.return-to-top a {
  display: block;
  width: 2.5rem;
  height: 2.5rem;
  padding: 0.25rem;
  border-radius: 1rem;
  background-color: var(--color-gold);
  color: var(--secondary);
  text-decoration: none;
  text-align: center;
  font-size: var(--font-size-3);
  color: var(--secondary);
  font-family: var(--font-primary);
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
}

.return-to-top a:hover {
  text-decoration: none;
  background-color: var(--color-green);
  transform: scale(1.1);
}

.return-to-top a img {
  width: 2rem;
  filter: invert(1);
}
</style>
