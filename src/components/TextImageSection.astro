---
import ButtonLink from "./ButtonLink.astro";

interface Props {
  id?: string;
  title?: string;
  btnLink?: string;
  btnText?: string;
  btnSize?: "normal" | "small" | "large";
  imageSrc: string;
  imageAlt: string;
}

const {
  id = "",
  title = "",
  btnLink = "",
  btnText = "",
  btnSize = "normal",
  imageSrc = "",
  imageAlt = "",
} = Astro.props;
---

<section id={id} class="text-image-section">
  <div class="flex-columns">
    <div class="text-box">
      <h2>{title}</h2>
      <!-- Text goes here -->
      <slot class="customText" />
      <!-- End text -->
      {
        btnLink && btnText && (
          <ButtonLink
            btnLink={btnLink}
            btnText={btnText}
            size={btnSize}
            customClass="mt-1"
          />
        )
      }
    </div>
    <div class="image-box">
      <img decoding="async" loading="lazy" src={imageSrc} alt={imageAlt} />
    </div>
  </div>
</section>

<style>
  .flex-columns {
    display: flex;
    /* flex-direction: column; */
    align-items: center;
    justify-content: center;
    max-width: 940px;
    margin: 0 auto;
    /* gap: 4rem; */
  }

  .text-box {
    width: 50%;
    padding: 0 2rem;
  }

  .text-box h2 {
    max-width: fit-content;
  }

  .text-box h2,
  .text-box p {
    text-align: left;
  }

  /* Reset the underline position */
  .text-box h2::after {
    width: 100%;
    margin: 0.5rem 0 1rem 0;
  }

  .image-box {
    width: 50%;
  }

  .image-box img {
    width: 100%;
    max-width: 600px;
    vertical-align: middle;
    /* height: auto; */
    border-radius: 1rem;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
  }

  @media screen and (max-width: 991px) {
    .flex-columns {
      max-width: 728px;
    }

    .text-box,
    .image-box {
      max-width: 728px;
    }
  }

  @media screen and (max-width: 767px) {
    .flex-columns {
      flex-direction: column;
    }

    .text-box,
    .image-box {
      width: 90%;
    }

    .text-box {
      padding: 0 1rem;
      margin-bottom: 2rem;
    }
  }



</style>
